#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  local nm_pkg="$1"; shift
  pkg clean "$nm_pkg"
  PKG_TARGET=update block compile pkgsrc "$nm_pkg"
  PKG_TARGET=install block compile pkgsrc "$nm_pkg"
}

source sub "$0" "$@"


